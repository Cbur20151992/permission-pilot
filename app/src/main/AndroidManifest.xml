<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="eu.darken.myperm">

    <application
        android:name="eu.darken.myperm.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="eu.darken.myperm.main.ui.MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name="eu.darken.myperm.main.core.receiver.ExampleReceiver"
            android:enabled="true"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.HEADSET_PLUG" />
            </intent-filter>
        </receiver>
        <service
            android:name="eu.darken.myperm.main.core.service.ExampleService"
            android:exported="false" />

        <!-- Debug stuff-->
        <activity
            android:name="eu.darken.myperm.common.debug.recording.ui.RecorderActivity"
            android:theme="@style/AppThemeFloating" />

        <service android:name="eu.darken.myperm.common.debug.recording.core.RecorderService" />
    </application>

</manifest>